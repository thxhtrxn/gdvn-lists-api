{
	"name": "gdvn-rated-lvls-api",
	"type": "module",
	"version": "1.0.0-indev",
	"scripts": {
		"prepare": "husky",
		"dev": "bun run --watch src/index.ts",
		"lint": "biome check",
		"format": "biome format --write",
		"check": "bun format && biome lint",
		"lint-staged": "lint-staged",
		"db:backup": "supabase db diff -f my_schema; supabase db dump --local --data-only > supabase/seed.sql",
		"db:update-types": "supabase gen types typescript --local > ./src/types/supabase.ts",
		"db:sync": "echo y | supabase db pull; supabase db reset; bun db:update-types"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.1",
		"@elysiajs/openapi": "^1.4.13",
		"@supabase/supabase-js": "^2.89.0",
		"elysia": "^1.4.19",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@types/bun": "^1.3.5",
		"bun-types": "^1.3.5",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	},
	"module": "src/index.js"
}
